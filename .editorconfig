# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{py, sh}]
indent_style = space
indent_size = 4

[*.{json, yml}]
indent_style = space
indent_size = 2

# Ignore paths
[roles/**]
insert_final_newline = unset
indent_style = unset
indent_size = unset
